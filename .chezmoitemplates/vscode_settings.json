{
    // Auto save
    "files.autoSave": "afterDelay",

    // Disable minimap
    "editor.minimap.enabled": false,

    // Move the sidebar to the right
    "workbench.sideBar.location": "right",

    // Git blame
    "git.blame.editorDecoration.enabled": true,

    // Show a single tab
    "workbench.editor.showTabs": "single",
    "zenMode.showTabs": "single",

    // Zen mode
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,

    // Compact bar
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "hidden",

    // Prevent ALT key from activating the menu bar
    "window.enableMenuBarMnemonics": false,

    // Theme
    "workbench.colorTheme": "Ayu Dark",

    // Font
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 17,
    "editor.lineHeight": 32,
    "editor.fontLigatures": true,

    // Smooth scrolling
    "editor.smoothScrolling": true,

    // Explorer: compact folders
    "explorer.compactFolders": false,

    // Cursor smooth animation
    "editor.cursorSmoothCaretAnimation": "on",

    // Relative line numbers
    "editor.lineNumbers": "relative",

    // Vim: set leader key
    "vim.leader": "<space>",

    // Vim: set clipboard to system clipboard
    "vim.useSystemClipboard": true,

    // Vim: prevent paste from losing yank
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["p"], "after": ["p", "g", "v", "y"] },
    ],

    // Vim: center cursor when scrolling
    "vim.normalModeKeyBindings": [
        // { "before": [ "k" ], "after": [ "k", "z", "z" ] },
        // { "before": [ "j" ], "after": [ "j", "z", "z" ] },
        { "before": [ "<C-u>" ], "after": [ "<C-u>", "z", "z" ] },
        { "before": [ "<C-d>" ], "after": [ "<C-d>", "z", "z" ] },
    ],

    // Vim: easymotion plugin
    "vim.easymotion": true,

    // Vim: surround plugin
    "vim.surround": true,

    // Vim: sneak plugin
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,

    // Vim: highlight yanked text
    "vim.highlightedyank.enable": true,

    // Git: enable smart commit
    "git.enableSmartCommit": true,
}